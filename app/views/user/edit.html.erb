<h2>Edit <%= "#{@user.first_name}" + ' ' + "#{@user.last_name}" %></h2>


<%= simple_form_for(@user, :url => user_path, :html => { :method => :put }, :wrapper => :bootstrap3_horizontal, :html => { :class => 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <div class="row">
    <h4 class="col-sm-offset-4 col-sm-4">Account information</h4>
    <p class="col-sm-offset-4 col-sm-4">Sign in credentials</p>
  </div>
  <%= f.input :email, label_html: { class: 'col-sm-4' }, placeholder: 'yourname@example.com' %>
  <%= f.input :password, label: 'New password', label_html: { class: 'col-sm-4' } %>
  <%= f.input :password_confirmation, label: 'Confirm your new password', label_html: { class: 'col-sm-4' } %>
  <%= f.input :current_password, label_html: { class: 'col-sm-4' } %>
  <br/>

  <div class="row">
    <h4 class="col-sm-offset-4 col-sm-4">Personal information</h4>
    <p class="col-sm-offset-4 col-sm-4">Information about the individual</p>
  </div>
  <%= f.input :first_name, label: 'First Name', label_html: { class: 'col-sm-4' } %>
  <%= f.input :last_name, label: 'Last Name', label_html: { class: 'col-sm-4' } %>
  <br/>

  <div class="row">
    <h4 class="col-sm-offset-4 col-sm-4">Company information</h4>
    <p class="col-sm-offset-4 col-sm-4">Information about the company</p>
  </div>
  <%= f.input :company, label: 'Company name', label_html: { class: 'col-sm-4' } %>
  <%= f.input :office_country, label: 'Country', label_html: { class: 'col-sm-4' } %>
  <%= f.input :office_city, label: 'City', label_html: { class: 'col-sm-4' } %>
  <%= f.input :office_location, label: 'Address', label_html: { class: 'col-sm-4' } %>
  <br/>

  <div class="row">
    <h4 class="col-sm-offset-4 col-sm-4">Role</h4>
    <p class="col-sm-offset-4 col-sm-4">What is this individual's role? More than one role is permitted.</p>
  </div>
  <%= f.input :customer, label_html: { class: 'col-sm-4' } %>
  <%= f.input :employee, label_html: { class: 'col-sm-4' } %>
  <%= f.input :admin, label_html: { class: 'col-sm-4' } if current_user.admin? %><%# only admin can check/uncheck admin %>
  <br/>
  <br/>

  <%= f.submit "Update", class: 'btn btn-primary col-sm-offset-4' %>
<% end %>
<br/>

<h3>Cancel <%= "#{@user.first_name}" + ' ' + "#{@user.last_name}" + "'s account?" %></h3>

<%= button_to "Cancel account", @user, :data => { :confirm => "Are you sure?" }, :method => :delete %>

<%= link_to "Back", :back %>
