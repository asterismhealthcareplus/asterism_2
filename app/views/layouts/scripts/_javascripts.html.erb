<%# Script to copy item attributes from dropdown to form in modal %>
<script>
  edit = function(pk, p, a) {
      /* initialise the input form based on function parameters */
      $("#pk").prop("value", pk);
      $("#p").prop("value", p);
      $("#a").prop("value", a);
      $("#v").prop("value", "");
  }
</script>

