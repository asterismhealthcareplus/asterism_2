</script>

<%# Script to add new item %>
<script>
  function log(text)
  {
      $("#log").append("<li>" + text + "</li>");
  }

  $(document).ready(function() {
      $("#submit_modal_add_item").on('click', function() {
          log("make request");
          $.ajax({
              type: "get",
              url: "https://trm-dot-alldonetutils.appspot.com/c/asterism/setprodinfo/",
              data: {
                  u: "asterismui",
                  pw: "foobar",
                  pk: $("#pk").val(),
                  p: $("#p").val() + '.' + $("#i").val(),
                  a: $("#a").val(),
                  v: $("#v").val()
              },
              dataType: "text",
              crossDomain: true,
              success: function (data) {
                  log("success");
                  $("#result").html(data);
              }
          });
      });
  });
</script>

